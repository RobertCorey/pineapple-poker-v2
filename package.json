    "dev:down": "./scripts/dev-down.sh",
    "test": "npx playwright test",
    "test:unit": "vitest run --config shared/vitest.config.ts"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "vitest": "^4.0.18"
  }
}
